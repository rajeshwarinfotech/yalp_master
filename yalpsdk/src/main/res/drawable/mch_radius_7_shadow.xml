<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Bottom 2dp Shadow ：底部阴影层-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0d7EA7F9" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- White Top color：顶部层 -->
    <item
        android:bottom="4dp"
        android:left="3dp"
        android:right="3dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <!--设置边框 宽度=1px，颜色为skyBluesss-->
            <stroke
                android:width="0.5dp"
                android:color="#1a7EA7F9" />
        </shape>
    </item>
</layer-list>
