<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:background="#00000000"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:background="@drawable/mch_choosepay_backgrount"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/mch_choosepay_backgrount_top_ptb"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
             >

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sorry_alert"
                android:textColor="#bebfc2"
                android:textSize="16dip"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_margin="10dip"
            android:text="@string/not_enough_balance_for_platform_coins"
            android:textColor="#333333"
            android:textSize="15sp"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#B5B5B5"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_weight="0.8"
            android:layout_gravity="center">


            <Button
                android:visibility="visible"
                android:id="@+id/cancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@null"
                android:text="@string/cancel"
                android:textSize="14sp"
                android:textColor="#000000" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#B5B5B5"/>
            <Button
                android:id="@+id/ok"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@null"
                android:text="@string/ok"
                android:textSize="14sp"
                android:textColor="#000000"
               />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>