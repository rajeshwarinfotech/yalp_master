<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mch_choosepay_backgrount_ptb"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- 最上面充值中心 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/iv_mch_pay_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/mch_close1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tx_mch_select_ptb_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="@string/platform_coins"
            android:textColor="#8c8c8c"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_mch_pay_close"
            android:layout_width="30dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:src="@drawable/mch_close1" />
    </LinearLayout>

    <!-- 中间商品价格 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="#fff"
            android:gravity="left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mch_choosepay_money"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tx_mch_select_ptb_gameptb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:text="@string/platform_coins_to_pay"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="100.00"
                android:textColor="#ff4e00"
                android:textSize="15.5dp" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="fill_parent"
                android:background="#a0a0a0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="0.01"
                android:textColor="#FF0000"
                android:textSize="19sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/dollar"
                android:textColor="#000"
                android:textSize="19sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#55434343"
        android:visibility="gone" />

    <!-- 支付选项列表 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:id="@+id/ll_ptb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ptb"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/mch_choosepay_select" />

            <ImageView
                android:id="@+id/img_ptb_un"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/mch_choosepay_unselect"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tx_mch_select_ptb_userptb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/platform_coins_label"
                android:textColor="#8c8c8c"
                android:textSize="14.5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ptb_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ptb_bind"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/mch_choosepay_select"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_ptb_bind_un"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:background="@drawable/mch_choosepay_unselect" />

            <TextView
                android:id="@+id/tx_mch_select_ptb_bindptb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="绑定平台币:"
                android:textColor="#8c8c8c"
                android:textSize="14.5dp"
                 />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:gravity="left|center_vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        android:gravity="left|center_vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:width="200dp"
            android:background="#88434340"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/item_name"
            android:textColor="#fff"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_mch_dialog_ptbpay"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="@drawable/mch_cricle_5dp_bg_blue"
        android:text="@string/pay_now"
        android:textColor="#ffffff"
        android:textSize="20dp"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0.2" />

</LinearLayout>