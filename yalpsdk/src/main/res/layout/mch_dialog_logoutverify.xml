<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:gravity="center"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:background="@drawable/mch_allowprivacy_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/verify_to_close_account"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sms_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:text="已向182****3727发送验证码，请注意查收"
                android:textColor="#999999"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/edt_logout_sms"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/mch_et_bg"
                android:hint="@string/please_enter_verification_code"
                android:maxLength="25"
                android:maxLines="1"
                android:paddingLeft="9dp"
                android:layout_marginBottom="16dp"
                android:singleLine="true"
                android:textColor="#222222"
                android:textColorHint="#C1C1C4"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <Button
                android:id="@+id/btn_logout_submit"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/ok"
                android:textColor="#FEFEFE"
                android:textSize="15sp"
                android:background="@drawable/mch_delaccount_calcel"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>