<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mch_bai">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/mch_btn_back"
            android:padding="1dp"/>
        <TextView
            android:id="@+id/btn_tv_add_account"
            android:text="@string/create_alt_account"
            android:layout_width="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/mch_yanse"
            android:background="@drawable/mch_btn_xiaohao_bg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/btn_tv_explain_account"
            android:text="@string/about_alt_accounts"
            android:layout_toLeftOf="@id/btn_tv_add_account"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/mch_yanse"
            android:background="@drawable/mch_btn_xiaohao_bg"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_alt_account_to_login"
        android:textColor="@color/mch_yanse"
        android:gravity="center"
        android:textSize="16sp"/>

    <ListView
        android:id="@+id/list_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:listSelector="@android:color/transparent"
        android:divider="@null"
        android:scrollbars="none"
        android:overScrollMode="never">
    </ListView>

</LinearLayout>