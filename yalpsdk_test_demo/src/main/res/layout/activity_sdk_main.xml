<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ededed"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/mch_hei"
                    android:text="Price: ">
                </TextView>
                <EditText
                    android:id="@+id/price"
                    android:textAlignment="center"
                    android:text="$0.00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
            <TextView
                android:id="@+id/login"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:background="@drawable/demo_radius"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Login" />
            <Button
                android:id="@+id/btnPay"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/demo_radius"
                android:textColor="#ffffff"
                android:text="Purchase"
                android:textSize="25sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
            <Button
                android:id="@+id/btn_privacy_dialog"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="25sp"
                android:background="@drawable/demo_radius"
                android:textColor="#ffffff"
                android:text="Privacy Policy"/>
            <Button
                android:id="@+id/btnUploadRole"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="4"
                android:background="@drawable/demo_radius"
                android:textColor="#ffffff"
                android:text="Upload Character"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
            <Button
                android:id="@+id/watchLiveStreaming"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/demo_radius"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:text="Watch Streaming" />


            <Button
                android:id="@+id/joinRoom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="4"
                android:background="@drawable/demo_radius"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="25sp"
                tools:ignore="HardcodedText"
                android:text="Join Room" />
            <Button
                android:id="@+id/testLoginAction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="4"
                android:background="@drawable/demo_radius"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="25sp"
                tools:ignore="HardcodedText"
                android:text="Test" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/demo_radius"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:text="Logout" />


            <Button
                android:id="@+id/btnExit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="4"
                android:background="@drawable/demo_radius"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="25sp"
                tools:ignore="HardcodedText"
                android:text="Exit" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/appInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>